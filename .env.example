ARBITRUM_SEPOLIA_RPC_URL=
SEPOLIA_RPC_URL=

# Deploy parameters (for script/DeployIDOSNodeStaking.s.sol)
INITIAL_OWNER=
# Optional: START_TIME (default: block.timestamp), EPOCH_REWARD (default: 0)

# Etherscan verification
